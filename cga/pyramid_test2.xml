<?xml version="1.0"?>
<rules>
	<rule name="Lot">
		<operator name="taper">
			<param name="height" value="11"/>
			<param name="top_ratio" value="0.8"/>
		</operator>
		<output name="Pyramid"/>
	</rule>
	<rule name="Pyramid">
		<operator name="comp">
			<param name="front" value="FrontFacade"/>
			<param name="side" value="SideFacade"/>
			<param name="top" value="Roof"/>
			<param name="bottom" value="Base"/>
		</operator>
	</rule>
</rules>
