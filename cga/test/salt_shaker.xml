<?xml version="1.0"?>
<rules>
	<rule name="Lot">
		<taper>
			<param name="height" value="3"/>
			<param name="top_ratio" value="0.7"/>
		</taper>
		<comp>
			<param name="front" value="Side."/>
			<param name="side" value="Side."/>
			<param name="top" value="Top"/>
			<param name="bottom" value="Bottom."/>
		</comp>
	</rule>
	<rule name="Top">
		<offset>
			<param name="offsetDistance" value="-0.5"/>
		</offset>
		<comp>
			<param name="inside" value="X"/>
			<param name="border" value="Y."/>
		</comp>
	</rule>
	<rule name="X">
		<extrude>
			<param name="height" value="2"/>
		</extrude>
	</rule>
</rules>
