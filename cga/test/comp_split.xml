<?xml version="1.0"?>
<rules>
	<rule name="Lot">
		<extrude>
			<param name="height" value="5"/>
		</extrude>
		<comp>
			<param name="front" value="Facade"/>
			<param name="side" value="Facade"/>
			<param name="top" value="Roof."/>
			<param name="bottom" value="Base."/>
		</comp>
	</rule>
	<rule name="Facade">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="absolute" value="2.0" name="Floor."/>
				<element type="floating" value="1.5" name="Floor." repeat="true"/>
			</param>
		</split>
	</rule>
</rules>