<?xml version="1.0"?>
<rules>
	<rule name="Start">
		<extrude height="8"/>
		<comp>
			<param name="side" value="Facade"/>
			<param name="top" value="Roof."/>
			<param name="bottom" value="Base."/>
		</comp>
	</rule>
	<rule name="Facade">
		<split splitAxis="y">
			<param type="floating" value="4" name="Floor"/>
			<param type="floating" value="4.5" name="LedgeAndFloor" repeat="true"/>
		</split>
	</rule>
	
	<!-- material -->
	<rule name="Ledge">
		<color s="#00ff00"/>
	</rule>
</rules>