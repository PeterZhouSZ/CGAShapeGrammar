<?xml version="1.0"?>
<rules>
	<rule name="Lot">
		<extrude>
			<param name="height" value="6"/>
		</extrude>
		<copy name="House"/>
	</rule>
	<rule name="House">
		<comp>
			<param name="front" value="FrontFacade"/>
			<param name="side" value="SideFacade"/>
			<param name="top" value="Roof"/>
			<param name="bottom" value="Base."/>
		</comp>
	</rule>
	<rule name="Roof">
		<roofHip>
			<param name="angle" value="30"/>
		</roofHip>
	</rule>
	<rule name="FrontFacade">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="relative" value="0.5" name="Entrance."/>
				<element type="relative" value="0.5" name="Floor"/>
			</param>
		</split>
	</rule>
	<rule name="SideFacade">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="relative" value="0.5" name="Floor"/>
				<element type="relative" value="0.5" name="Floor"/>
			</param>
		</split>
	</rule>
	<rule name="Floor">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="absolute" value="1.0" name="Wall."/>
				<element type="floating" value="3.0" name="Tile" repeat="true"/>
				<element type="absolute" value="1.0" name="Wall."/>
			</param>
		</split>
	</rule>
	<rule name="Tile">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="1.0" name="Wall."/>
				<element type="absolute" value="2.0" name="WallWindowWall"/>
				<element type="floating" value="1.0" name="Wall."/>
			</param>
		</split>
	</rule>
	<rule name="WallWindowWall">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="absolute" value="1.0" name="Wall."/>
				<element type="absolute" value="1.5" name="Window"/>
				<element type="floating" value="1.0" name="Wall."/>
			</param>
		</split>
	</rule>
	<rule name="Window">
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="0"/>
			<param name="y" value="0"/>
			<param name="z" value="-0.05"/>
		</translate>
		<setupProjection>
			<param name="coordinateType" value="relative"/>
			<param name="texWidth" type="absolute" value="scope.sx"/>
			<param name="texHeight" type="absolute" value="scope.sy"/>
		</setupProjection>
		<texture>
			<param name="texture" value="../assets/textures/window.1.tif"/>
		</texture>
	</rule>
</rules>