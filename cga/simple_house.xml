<?xml version="1.0"?>
<rules>
	<rule name="Lot">
		<operator name="extrude">
			<param name="height" value="6"/>
		</operator>
		<output name="House"/>
	</rule>
	<rule name="House">
		<operator name="comp">
			<param name="front" value="FrontFacade"/>
			<param name="side" value="SideFacade"/>
			<param name="top" value="Roof"/>
			<param name="bottom" value="Base"/>
		</operator>
	</rule>
	<rule name="Roof">
		<operator name="roofHip">
			<param name="angle" value="30"/>
		</operator>
	</rule>
	<rule name="FrontFacade">
		<operator name="split">
			<param name="direction" value="y"/>
			<param name="size">
				<element type="relative" value="0.5"/>
				<element type="relative" value="0.5"/>
			</param>
			<param name="name">
				<element value="Entrance"/>
				<element value="Floor"/>
			</param>
		</operator>
	</rule>
	<rule name="SideFacade">
		<operator name="split">
			<param name="direction" value="y"/>
			<param name="size">
				<element type="relative" value="0.5"/>
				<element type="relative" value="0.5"/>
			</param>
			<param name="name">
				<element value="Floor"/>
				<element value="Floor"/>
			</param>
		</operator>
	</rule>
	<rule name="Floor">
		<operator name="split">
			<param name="direction" value="x"/>
			<param name="size">
				<element type="absolute" value="1.0"/>
				<element type="floating" value="3.0" repeat="true"/>
				<element type="absolute" value="1.0"/>
			</param>
			<param name="name">
				<element value="Wall"/>
				<element value="Tile"/>
				<element value="Wall"/>
			</param>
		</operator>
	</rule>
	<rule name="Tile">
		<operator name="split">
			<param name="direction" value="x"/>
			<param name="size">
				<element type="floating" value="1.0"/>
				<element type="absolute" value="2.0"/>
				<element type="floating" value="1.0"/>
			</param>
			<param name="name">
				<element value="Wall"/>
				<element value="WallWindowWall"/>
				<element value="Wall"/>
			</param>
		</operator>
	</rule>
	<rule name="WallWindowWall">
		<operator name="split">
			<param name="direction" value="y"/>
			<param name="size">
				<element type="absolute" value="1.0"/>
				<element type="absolute" value="1.5"/>
				<element type="floating" value="1.0"/>
			</param>
			<param name="name">
				<element value="Wall"/>
				<element value="Window"/>
				<element value="Wall"/>
			</param>
		</operator>
	</rule>
	<rule name="Window">
		<operator name="translate">
			<param name="x" value="0"/>
			<param name="y" value="0"/>
			<param name="z" value="-0.25"/>
		</operator>
		<operator name="setupProjection">
			<param name="coordinateType" value="relative"/>
			<param name="texWidth" value="0"/>
			<param name="texHeight" value="0"/>
		</operator>
		<operator name="texture">
			<param name="texture" value="textures/window.jpg"/>
		</operator>
	</rule>
</rules>