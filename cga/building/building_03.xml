<?xml version="1.0"?>
<rules>
	<attr name="building_height" value="6"/>
	<attr name="building_offset" value="-1"/>
	<attr name="building_corner_length" value="4"/>
	
	<rule name="Start">
		<copy name="Start2"/>
		<offset offsetDistance="building_offset" offsetSelector="inside"/>
		<extrude height="building_height"/>
	</rule>
	<rule name="Start2">
		<split splitAxis="x">
			<param type="absolute" value="building_corner_length" name="Start3"/>
			<param type="floating" value="1" name="NIL"/>
			<param type="absolute" value="building_corner_length" name="Start3"/>
		</split>
	</rule>
	<rule name="Start3">
		<split splitAxis="y">
			<param type="absolute" value="building_corner_length" name="CornerBase"/>
			<param type="floating" value="1" name="NIL"/>
			<param type="absolute" value="building_corner_length" name="CornerBase"/>
		</split>
	</rule>
	<rule name="CornerBase">
		<extrude height="building_height"/>
	</rule>
</rules>