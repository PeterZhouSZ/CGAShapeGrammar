<?xml version="1.0"?>
<rules>
	<attr name="building_height" value="6"/>
	<attr name="ground_floor_height" value="3"/>
	<attr name="ground_curved_ratio" value="0.25"/>
	<attr name="ground_column_size" value="0.2"/>
	
	<rule name="Start">
		<copy name="Start2"/>
		<translate mode="rel" coordSystem="object">
			<param name="x" type="absolute" value="0"/>
			<param name="y" type="absolute" value="0"/>
			<param name="z" type="absolute" value="ground_floor_height"/>
		</translate>
		<extrude height="building_height-ground_floor_height"/>
	</rule>
	<rule name="Start2">
		<split splitAxis="x">
			<param type="floating" value="1" name="GroundBase"/>
			<param type="relative" value="ground_curved_ratio" name="Start3"/>
		</split>
	</rule>
	<rule name="Start3">
		<split splitAxis="y">
			<param type="relative" value="ground_curved_ratio" name="Start4"/>
			<param type="floating" value="1" name="GroundBase"/>
		</split>
	</rule>
	<rule name="Start4">
		<split splitAxis="x">
			<param type="floating" value="1" name="NIL"/>
			<param type="absolute" value="ground_column_size" name="Start5"/>
		</split>
	</rule>
	<rule name="Start5">
		<split splitAxis="y">
			<param type="absolute" value="ground_column_size" name="Column"/>
			<param type="floating" value="1" name="NIL"/>
		</split>
	</rule>
	<rule name="Column">
		<extrude height="ground_floor_height"/>
	</rule>
	<rule name="GroundBase">
		<extrude height="ground_floor_height"/>
	</rule>
</rules>