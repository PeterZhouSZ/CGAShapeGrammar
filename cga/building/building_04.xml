<?xml version="1.0"?>
<rules>
	<attr name="building_height" value="6"/>
	<attr name="ground_floor_height" value="3"/>
	<attr name="building_offset" value="3"/>
	<attr name="garage_width" value="6"/>
	<attr name="second_floor_width_ratio" value="0.6"/>
	<attr name="roof_overhand" value="0.3"/>
	
	<rule name="Start">
		<copy name="Start2"/>
		<split splitAxis="y">
			<param type="absolute" value="building_offset" name="NIL"/>
			<param type="floating" value="1" name="MainBase"/>
		</split>
	</rule>
	<rule name="MainBase">
		<extrude height="ground_floor_height"/>
		<comp>
			<param name="side" value="Facade."/>
			<param name="top" value="GroundFloorTop"/>
			<param name="bottom" value="Base"/>
		</comp>
	</rule>
	<rule name="Start2">
		<split splitAxis="x">
			<param type="float" value="1" name="NIL"/>
			<param type="absolute" value="garage_width" name="GarageBase"/>
		</split>
	</rule>
	<rule name="GarageBase">
		<extrude height="ground_floor_height"/>
		<comp>
			<param name="side" value="Facade."/>
			<param name="top" value="GarageRoof"/>
			<param name="bottom" value="Base"/>
		</comp>
	</rule>
	<rule name="GroundFloorTop">
		<copy name="GroundFloorTop2"/>
		<split splitAxis="x">
			<param type="relative" value="1-second_floor_width_ratio" name="NIL"/>
			<param type="relative" value="second_floor_width_ratio" name="SecondFloorBase"/>
		</split>
	</rule>
	<rule name="GroundFloorTop2">
		<offset offsetDistance="roof_overhand" offsetSelector="inside"/>
		<roofHip angle="20"/>
	</rule>
	<rule name="SecondFloorBase">
		<extrude height="building_height-ground_floor_height"/>
		<comp>
			<param name="side" value="Facade."/>
			<param name="top" value="SecondFloorRoof"/>
			<param name="bottom" value="Base"/>
		</comp>
	</rule>
	<rule name="SecondFloorRoof">
		<offset offsetDistance="roof_overhand" offsetSelector="inside"/>
		<taper height="2"/>
	</rule>
	<rule name="GarageRoof">
		<offset offsetDistance="roof_overhand" offsetSelector="inside"/>
		<roofHip angle="20"/>
	</rule>
</rules>