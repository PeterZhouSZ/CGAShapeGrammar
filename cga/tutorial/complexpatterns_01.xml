<?xml version="1.0"?>
<rules version="2011.1" author="andi">
	<!-- Attributes -->
	<attr name="buildingH" value="27"/>
	<attr name="floorH" value="3.5"/>
	<attr name="groundflH" value="4.5"/>
	<attr name="nSymmetries" value="2"/>
	<attr name="borderwallW" value="0.3"/>
	<attr name="ledgeH" value="0.3"/>
	<attr name="windowW" value="2.5"/>
	<attr name="milkGlassW" value="1.25"/>
	<attr name="blindH" value="0.8"/>
	<attr name="frameW" value="0.07"/>
	<attr name="balconyDepth" value="2"/>
	<attr name="brightblue" value="#86b1c7"/>
	<attr name="darkblue" value="#33556c"/>
	<attr name="red" value="#5c3f40"/>
	<attr name="grey" value="#6b7785"/>
	<attr name="white" value="#ffffff"/>

	<attr name="tileW" value="3.75"/>
	<attr name="barDiameter" value="0.04"/>
	
	<!-- Assets -->
	<attr name="cyl_v" value="../assets/primitives/cylinder.vert.8.notop.tex.obj"/>
	<attr name="cyl_h" value="../assets/primitives/cylinder.hor.8.notop.tex.obj"/>
	<attr name="window_tex" value="../assets/textures/1_glass_2_blue.tif"/>
	<attr name="milkGlass_tex" value="../assets/textures/blend_tex.png"/>
	<attr name="cube" value="../assets/primitives/cube.obj"/>
	
	<!-- Volume -->
	<rule name="Lot">
		<extrude>
			<param name="height" value="buildingH"/>
		</extrude>
		<split>
			<param name="splitAxis" value="z"/>
			<param name="size">
				<element type="floating" value="1" name="MainPart"/>
				<element type="absolute" value="floorH" name="UpperPart"/>
			</param>
		</split>
	</rule>
	
	<rule name="UpperPart">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="absolute" value="balconyDepth" name="Balcony"/>
				<element type="floating" value="1" name="TopFloor"/>
			</param>
		</split>
	</rule>
	
	<rule name="MainPart">
		<comp>
			<param name="front" value="Facade"/>
			<param name="side" value="Wall"/>
			<param name="top" value="Roof."/>
		</comp>
	</rule>
	
	<rule name="TopFloor">
		<comp>
			<param name="front" value="Floor"/>
			<param name="side" value="Wall"/>
			<param name="top" value="Roof."/>
		</comp>
	</rule>
	
	<rule name="Balcony">
		<size>
			<param name="xSize" type="absolute" value="scope.sx-2*borderwallW"/>
			<param name="ySize" type="absolute" value="scope.sy-borderwallW"/>
			<param name="zSize" type="absolute" value="0.7"/>
		</size>
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="borderwallW"/>
			<param name="y" value="borderwallW"/>
			<param name="z" value="0"/>
		</translate>
		<comp>
			<param name="front" value="Railing"/>
			<param name="left" value="Railing"/>
			<param name="right" value="Railing"/>
		</comp>
	</rule>

	<!-- Facade and Floors -->
	<rule name="Facade">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="floating" value="groundflH" name="Floor"/>
				<element type="floating" value="floorH" name="Floor" repeat="true"/>
			</param>
		</split>
	</rule>
	<rule name="Floor">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="absolute" value="borderwallW" name="Wall"/>
				<element type="floating" value="1" name="FloorSub"/>
				<element type="absolute" value="borderwallW" name="Wall"/>
			</param>
		</split>
	</rule>
	<rule name="FloorSub">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="floating" value="1" name="TileRow"/>
				<element type="absolute" value="ledgeH" name="Ledge"/>
			</param>
		</split>
	</rule>
	
	<!-- Tiles -->
	<rule name="TileRow">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="tileW*nSymmetries" name="DoubleTile" repeat="true"/>
			</param>
		</split>
	</rule>
	<rule name="DoubleTile">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="milkGlassW+windowW" name="MilkGlassAndTile" repeat="true"/>
			</param>
		</split>
	</rule>
	<rule name="MilkGlassAndTile">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="milkGlassW" name="MilkGlass"/>
				<element type="floating" value="windowW" name="Tile"/>
			</param>
		</split>
	</rule>
	<rule name="Tile">
		<setupProjection>
			<param name="axesSelector" value="scope.xy"/>
			<param name="texWidth" type="absolute" value="scope.sx"/>
			<param name="texHeight" type="absolute" value="scope.sy"/>
		</setupProjection>
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="absolute" value="frameW" name="FrameAndBracing"/>
				<element type="floating" value="1" name="FrameAndBlind"/>
				<element type="absolute" value="frameW" name="FrameAndBracing"/>
			</param>
		</split>
	</rule>
	<rule name="FrameAndBracing">
		<copy name="Frame"/>
		<copy name="Bracing"/>
	</rule>
	<rule name="FrameAndBlind">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="absolute" value="frameW" name="Frame"/>
				<element type="floating" value="1" name="Window"/>
				<element type="absolute" value="frameW" name="Frame"/>
				<element type="absolute" value="blindH" name="Blind"/>
				<element type="absolute" value="frameW" name="Frame"/>
			</param>
		</split>
	</rule>
	
	<!-- Windows -->
	<rule name="Window">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="1" name="Subwindow"/>
				<element type="absolute" value="frameW" name="Frame"/>
				<element type="floating" value="1" name="Glass"/>
			</param>
		</split>
	</rule>
	<rule name="Subwindow">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="2" name="Glass"/>
				<element type="floating" value="3" name="RedWindow"/>
			</param>
		</split>
	</rule>
	<rule name="RedWindow">
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="absolute" value="frameW" name="RedFrame"/>
				<element type="floating" value="1" name="RedFrameAndGlass"/>
			</param>
		</split>
	</rule>
	<rule name="RedFrameAndGlass">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="absolute" value="frameW" name="RedFrame"/>
				<element type="floating" value="1" name="RedGlass"/>
				<element type="absolute" value="frameW" name="RedFrame"/>
			</param>
		</split>
	</rule>
	<rule name="RedGlass">
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="floating" value="1" name="Glass"/>
				<element type="floating" value="frameW/2" name="Frame"/>
				<element type="floating" value="1" name="Glass"/>
			</param>
		</split>
	</rule>
	
	<!-- Materials -->
	<rule name="Wall">
		<color>
			<param name="s" value="darkblue"/>
		</color>
	</rule>
	<rule name="Blind">
		<color>
			<param name="s" value="grey"/>
		</color>
	</rule>
	<rule name="Frame">
		<extrude>
			<param name="height" value="frameW"/>
		</extrude>
		<color>
			<param name="s" value="white"/>
		</color>
	</rule>
	<rule name="RedFrame">
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="0"/>
			<param name="y" value="0"/>
			<param name="z" value="-frameW"/>
		</translate>
		<extrude>
			<param name="height" value="frameW*4"/>
		</extrude>
		<color>
			<param name="s" value="red"/>
		</color>
	</rule>
	<rule name="Glass">
		<texture>
			<param name="texture" value="window_tex"/>
		</texture>
		<color>
			<param name="s" value="white"/>
		</color>
	</rule>
	<rule name="MilkGlass">
		<size>
			<param name="xSize" type="relative" value="1"/>
			<param name="ySize" type="relative" value="1"/>
			<param name="zSize" type="absolute" value="frameW*1.2"/>
		</size>
		<insert>
			<param name="geometryPath" value="cube"/>
		</insert>
		<color>
			<param name="s" value="brightblue"/>
		</color>
		<!--
		<setupProjection>
			<param name="axesSelector" value="scope.xy"/>
			<param name="texWidth" type="absolute" value="scope.sx"/>
			<param name="texHeight" type="absolute" value="scope.sy"/>
		</setupProjection>
		-->
		<texture>
			<param name="texture" value="milkGlass_tex"/>
		</texture>
	</rule>
	
	<!-- Detail Elements -->
	<rule name="Ledge">
		<!--
		<copy name="Wall"/>
		-->
		<size>
			<param name="xSize" type="relative" value="1"/>
			<param name="ySize" type="relative" value="0.9"/>
			<param name="zSize" type="absolute" value="0.2"/>
		</size>
		<insert>
			<param name="geometryPath" value="cube"/>
		</insert>
		<copy name="Wall"/>
	</rule>
	<rule name="Railing">
		<copy name="HBar"/>
		<split>
			<param name="splitAxis" value="x"/>
			<param name="size">
				<element type="floating" value="tileW/3" name="VBar" repeat="true"/>
			</param>
		</split>
	</rule>
	<rule name="HBar">
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="0"/>
			<param name="y" value="scope.sy-barDiameter/2"/>
			<param name="z" value="0"/>
		</translate>
		<size>
			<param name="xSize" type="relative" value="1"/>
			<param name="ySize" type="absolute" value="barDiameter"/>
			<param name="zSize" type="absolute" value="barDiameter"/>
		</size>
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="0"/>
			<param name="y" value="0"/>
			<param name="z" value="-barDiameter"/>
		</translate>
		<insert>
			<param name="geometryPath" value="cyl_h"/>
		</insert>
		<color>
			<param name="s" value="white"/>
		</color>
	</rule>
	<rule name="VBar">
		<size>
			<param name="xSize" type="absolute" value="barDiameter"/>
			<param name="ySize" type="relative" value="1"/>
			<param name="zSize" type="absolute" value="barDiameter"/>
		</size>
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="0"/>
			<param name="y" value="0"/>
			<param name="z" value="-barDiameter"/>
		</translate>
		<insert>
			<param name="geometryPath" value="cyl_v"/>
		</insert>
		<color>
			<param name="s" value="white"/>
		</color>
	</rule>
	<rule name="Bracing">
		<size>
			<param name="xSize" type="absolute" value="barDiameter"/>
			<param name="ySize" type="relative" value="1"/>
			<param name="zSize" type="absolute" value="0.15"/>
		</size>
		<translate>
			<param name="mode" value="rel"/>
			<param name="coordSystem" value="object"/>
			<param name="x" value="barDiameter/2"/>
			<param name="y" value="0"/>
			<param name="z" value="0"/>
		</translate>
		<split>
			<param name="splitAxis" value="y"/>
			<param name="size">
				<element type="absolute" value="0.01" name="Wall"/>
				<element type="floating" value="1" name="VBar"/>
				<element type="absolute" value="0.01" name="Wall"/>
			</param>
		</split>
	</rule>
</rules>
