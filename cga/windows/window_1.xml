<?xml version="1.0"?>
<rules>
	<attr name="window_ledge_height" value="0.05"/>
	<attr name="window_ledge_depth" value="0.2"/>
	<attr name="window_single_width" value="0.5"/>
	<attr name="window_border" value="0.03"/>
	<attr name="window_depth" value="0.1"/>
	
	<rule name="Start">
		<split splitAxis="y">
			<param type="absolute" value="window_ledge_height" name="WindowLedge"/>
			<param type="floating" value="1" name="WindowMain"/>
			<param type="absolute" value="window_ledge_height" name="WindowLedge"/>
		</split>
	</rule>
	
	<rule name="WindowLedge">
		<extrude height="window_ledge_depth"/>
	</rule>
	
	<rule name="WindowMain">
		<split splitAxis="x">
			<param type="floating" value="window_single_width" name="WindowSingle" repeat="true"/>
		</split>
	</rule>
	
	<rule name="WindowSingle">
		<split splitAxis="x">
			<param type="absolute" value="window_border" name="WindowBorder"/>
			<param type="floating" value="1" name="WindowSingleMain"/>
			<param type="absolute" value="window_border" name="WindowBorder"/>
		</split>
	</rule>
	
	<rule name="WindowSingleMain">
		<extrude height="-window_depth"/>
	</rule>
</rules>